@model List<Usuario>
@{
    ViewData["Title"] = "Listagem";
}
<h1>Listagem</h1>
<link rel="stylesheet" type="text/css" href="site.css"/>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Login</th>
            <th>Senha</th>
            <th>Data de Nascimento</th>
            
        </tr>
    </thead>
    @foreach (Usuario u in Model)
    {
        <tr>
            <td>@u.Id</td>
            <td>@u.Nome</td>
            <td>@u.Login</td>
            <td>@u.Senha</td>
            <td>@u.DataNascimento</td>
            <td>
                <a href="/Usuario/Editar?Id=@u.Id">Alterar</a>
                <a href="/Usuario/Remover?Id=@u.Id">Excluir</a>
            </td>
        </tr>
    }
</table>